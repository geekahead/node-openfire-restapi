{
  "name": "openfire-api",
  "version": "1.1.1",
  "description": "Api wrapper for openfire XMPP server",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "dev": "tsc --watch",
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "version": "npm run format && git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ns23/node-openfire-restapi.git"
  },
  "keywords": [
    "xmpp"
  ],
  "files": [
    "dist/**/*"
  ],
  "author": "ns23",
  "license": "MIT",
  "dependencies": {
    "@xmpp/client": "^0.11.1",
    "got": "^11.5.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@types/jest": "^26.0.13",
    "@types/xml2js": "^0.4.5",
    "prettier": "^2.0.5",
    "jest": "^26.3.0",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.0",
    "typedoc": "^0.19.0",
    "ts-lint": "^4.5.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.6"
  }
}
